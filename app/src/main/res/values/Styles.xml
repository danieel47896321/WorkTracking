<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GenericTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="HeaderView" parent="GenericTextView">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">35sp</item>
    </style>
    <style name="TitleView" parent="GenericTextView">
        <item name="android:textSize">28sp</item>
    </style>
    <style name="TabLayoutView" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/blue2</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabSelectedTextColor">@color/blue2</item>
        <item name="tabTextColor">@color/default_color</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>